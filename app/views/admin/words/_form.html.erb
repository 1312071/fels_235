<%= form_for [:admin, @word] do |f| %>
  <%= render "shared/error_messages", object: @word %>
  <div class="form-group">
    <%= f.label :category %> :
    <%= f.select :category_id, options_from_collection_for_select(@categories,
      :id, :name, @word.category_id), class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :question %> :
    <%= f.text_field :content, value: @word.content, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :answers %> :
    <%= f.fields_for :answers, @word.answers do |builder| %>
      <%= render "answer_fields", f: builder %>
    <% end %>
  </div>
  <div class="form-group">
    <%= link_to_add_fields "", f, :answers %>
  </div>
  <div class="action pull-right">
    <%= f.submit t(".save"), class: "btn btn-primary submit" %>
  </div>
<% end %>
