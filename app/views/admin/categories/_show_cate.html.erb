<div class="row">
  <% @categories.each do |category| %>
    <div class="col-sm-10 col-md-6">
      <div class="thumbnail">
        <%= image_tag category.picture.url %>
        <h3><%= link_to category.name, "#" %></h3>
        <div>
          <%= link_to t(".edit"), edit_admin_category_path(category) %>
          <%= link_to t(".delete"), admin_category_path(category),
            method: :delete, data: {confirm: t(".confirm")} %>
        </div>
        <%= category.description %>
      </div>
    </div>
  <% end %>
</div>
<%= paginate @categories, theme: "twitter-bootstrap-3" %>
