<% provide :title, @user.name %>
<% if logged_in? %>
  <section class="container-fluid">
    <div class="row">
      <aside class="col-md-3">
        <section class="user_info">
          <%= render "shared/user_info" %>
        </section>
        <section class="stats">
          <%= render "shared/stats", user: @user %>
        </section>
        <%= render "follow_form" %>
      </aside>
    </div>
  </section>
<% end %>
