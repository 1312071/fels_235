<li>
  <%= gravatar_for user, size: Settings.user.avatar %>
  <%= link_to user.name, user %>
   <% if current_user.is_admin? && !user.current_user?(current_user)
      && !user.is_admin %>
    | <%= link_to t(".delete"), user, method: :delete,
      data: {confirm: t(".you_sure")} %>
  <% end %>
</li>
