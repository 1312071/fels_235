<% provide :title, @title %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1><%= @user.name %></h1>
      <span><%= link_to t(".view_my_profile"), @user %></span>
    </section>
    <section class="stats">
      <% if @users.any? %>
        <div class="user_avatars">
          <% @users.each do |user| %>
            <%= link_to gravatar_for(user, size: Settings.user.small_avatar), user %>
          <% end %>
        </div>
      <% end %>
    </section>
  </aside>
  <div class="col-md-8">
    <div>
      <h3><%= @title %></h3>
      <% if @users.any? %>
        <table class="table">
          <tr>
            <th><%= t ".index" %></th>
            <th><%= t ".avatar" %></th>
            <th><%= t ".name" %></th>
            <th><%= t ".email" %></th>
          </tr>
          <tbody>
            <%= render @users %>
          </tbody>
        </table>
        <%= paginate @users, theme: "twitter-bootstrap-3" %>
      <% end %>
    </div>
  </div>
</div>
