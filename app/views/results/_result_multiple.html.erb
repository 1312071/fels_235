<div id="answer">
  <h3>
    <%= object.lesson.category.name %>
    <%= current_result_stt object %>/<%= Settings.lesson.word_per_lesson %>
  </h3>
  <h3><%= current_result_stt object %>.<%= object.word.content %></h3>
  <input id="result_id" name="tags_list" value="<%= object.id %>"
    type="hidden" />
  <% object.word.answers.each do |answer| %>
    <div class="radio">
      <label><input type="checkbox" name="answer[]" value="<%= answer.id %>">
        <%= answer.content %>
      </label>
    </div>
  <% end %>
</div>
