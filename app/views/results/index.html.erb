<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <h3>
        <%= @results.first.lesson.category.name %> -
        <%= @results.first.lesson.point %>/<%= Settings.lesson.word_per_lesson %>
      </h3>

      <table class="table">
        <thead class="thead-inverse">
          <tr>
            <th><%= t"results.index.no." %></th>
            <th><%= t"results.index.result" %></th>
            <th><%= t"results.index.question" %></th>
            <th><%= t"results.index.your_answer" %></th>
          </tr>
        </thead>
        <tbody>
          <% @results.each do |result| %>
            <tr>
              <th scope="row"><%= current_result_stt result %></th>
              <td>
                <% if check_answer(result) %>
                  <span class="glyphicon glyphicon-ok" aria-hidden="true"></span>
                <% else %>
                  <span class="glyphicon glyphicon-remove" aria-hidden="true">
                  </span>
                <% end %>
              </td>
              <td><%= result.word.content %></td>
              <td>
                <%= print_answer_content result %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
