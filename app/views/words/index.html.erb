<% provide :title, t(".title") %>
<h1><%= t ".title" %></h1>
<div class="well">
  <%= form_for words_path, method: :get do |f| %>
    <div class="row">
      <div class="col-md-4">
        <%= f.label t ".search" %>
        <%= search_field_tag :search_word, params[:search_word],
          placeholder: t(".search"), class: "form-control" %>
      </div>
      <div class="col-md-6">
        <%= f.label t ".category" %>
        <%= select_tag :category_id,
          options_from_collection_for_select(@categories, "id", "name",
          params[:category_id]), include_blank: t("all"),
          class: "form-control form-small" %>
      </div>
      <div class="input-group-btn search-btn col-sm-3">
        <%= button_tag type: "submit", name: nil, class: "btn btn-primary" do %>
          <span class="glyphicon glyphicon-search" aria-hidden="true"></span>
          <span class="label-icon"><%= t ".filter" %></span>
        <% end %>
      </div>
    </div>
    <div class="row center"><%= render "filter_form" %></div>
  <% end %>
</div>
<div class="well well-small">
  <div class="pull-right" >
    <%= link_to t(".reset_filter"), words_path, class: "btn btn-default btn-sm" %>
    <%= link_to t(".pdf_export"), words_path(format: :pdf),
      class: "btn btn-default btn-sm" %>
  </div>
  <%= page_entries_info @words %>
</div>
<table class="table">
  <tr>
    <th><%= t ".index" %></th>
    <th><%= t ".content" %></th>
    <th><%= t ".meaning" %></th>
    <th><%= t ".category" %></th>
    <th><%= t ".picture" %></th>
    <th><%= t ".created_at" %></th>
  </tr>
  <tbody id="result">
    <%= render @words %>
  </tbody>
</table>
<%= paginate @words, theme: "twitter-bootstrap-3" %>
