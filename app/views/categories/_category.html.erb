<div class="col-sm-10 col-md-6">
  <div class="thumbnail">
    <%= image_tag category.picture.url %>
    <h3>
      <%= index_for category_counter, @categories.current_page,
        Settings.category.cate_per_page %>. <%= category.name %>
    </h3>
    <%= category.description %>
    <h5>
      <%= t "categories.category.contains" %>
      <%= category.words.size %>
      <%= t "categories.category.word" %>
    </h5>
    <% if logged_in? && !current_user.is_admin? %>
      <%= form_for category.lessons.build do |f| %>
        <%= f.hidden_field :category_id, value: category.id %>
        <%= f.submit t(".start_lesson"), class: "btn btn-primary" %>
      <% end %>
    <% end %>
  </div>
</div>
