<div class="col-sm-10 col-md-6">
  <div class="thumbnail">
    <%= image_tag category.picture.url %>
    <h3>
      <%= index_for category_counter, @categories.current_page,
        Settings.category.cate_per_page %>. <%= category.name %>
    </h3>
    <%= category.description %>
    <h5>
      <%= t "categories.category.contains" %>
      <%= category.words.size %>
      <%= t "categories.category.word" %>
    </h5>
  </div>
</div>
