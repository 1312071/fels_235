<div class="row">
  <%= form_tag lessons_path, method: :get do %>
    <div class="col-md-1 col-md-offset-6">
      <%= label t(".name"), t(".category") %>
    </div>
    <div class="col-md-3">
      <%= select_tag(t(".category"), options_for_select(Category.all.collect {
        |category| [category.name, category.id]}), {include_blank:true}) %>
    </div>
    <div class="col-md-1">
      <%= submit_tag t(".search"), class: "btn btn-default" %>
    </div>
  <% end %>
  <div class="col-md-6 col-md-offset-3">
    <table class="table">
      <thead class="thead-inverse">
        <tr>
          <th><%= t"lessons.index.category" %></th>
          <th><%= t"lessons.index.point" %></th>
          <th><%= t"lessons.index.start_date" %></th>
        </tr>
      </thead>
      <tbody>
        <%= render @lessons %>
      </tbody>
    </table>
  </div>
</div>
<%= paginate @lessons, theme: "twitter-bootstrap-3" %>
